{% extends 'base.html.twig' %}

{% block title %}Joueur index{% endblock %}

{% block body %}
    <h1>Joueur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Niveau</th>
                <th>Puissance</th>
                <th>PC_equipe1</th>
                <th>PC_equipe2</th>
                <th>PC_equipe3</th>
                <th>PC_equipe4</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for joueur in joueurs %}
            <tr>
                <td>{{ joueur.id }}</td>
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.niveau }}</td>
                <td>{{ joueur.puissance }}</td>
                <td>{{ joueur.PCEquipe1 }}</td>
                <td>{{ joueur.PCEquipe2 }}</td>
                <td>{{ joueur.PCEquipe3 }}</td>
                <td>{{ joueur.PCEquipe4 }}</td>
                <td>
                    <a href="{{ path('app_joueur_show', {'id': joueur.id}) }}">show</a>
                    <a href="{{ path('app_joueur_edit', {'id': joueur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_joueur_new') }}">Create new</a>
{% endblock %}
