{% extends 'base.html.twig' %}

{% block title %}Position index{% endblock %}

{% block body %}
    <h1>Position index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Serveur</th>
                <th>Alliance</th>
                <th>PosX</th>
                <th>PosY</th>
                <th>Jour</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for position in positions %}
            <tr>

                <td>{{ position.serveur }}</td>
                <td>{{ position.alliance }}</td>
                <td>{{ position.posX }}</td>
                <td>{{ position.posY }}</td>
                <td>{{ position.moment|date('d/m/Y H:i') }}(day {{ position.jour }})</td>
                <td>
                    <a href="{{ path('app_position_show', {'id': position.id}) }}">show</a>
                    <a href="{{ path('app_position_edit', {'id': position.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_position_new') }}">Create new</a>
{% endblock %}
